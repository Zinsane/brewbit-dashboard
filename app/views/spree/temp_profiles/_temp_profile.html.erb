<div class="temp-profile col-md-10 col-md-offset-1">
  <div class="panel panel-default">

    <div class="panel-heading clearfix">
      <div class='pull-left'>
        <h3 class="panel-title"><%= temp_profile.name %></h3>
      </div>
      <div class="btn-group pull-right">
        <%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_temp_profile_path(temp_profile), class: 'btn btn-default' %>
        <%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), temp_profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
    <div class="panel-body">
      <div id="temp-profile-<%= temp_profile.id %>-timeline" class="temp-profile-plot bottom-space"></div>
      <script type='text/javascript'>
        $(document).ready(function () {
          RELATIVE_LABELS = [];
          RELATIVE_LABELS[Dygraph.SECONDLY]        = { label: 'sec', mult: 1 };
          RELATIVE_LABELS[Dygraph.TWO_SECONDLY]    = { label: 'sec', mult: 2 };
          RELATIVE_LABELS[Dygraph.FIVE_SECONDLY]   = { label: 'sec', mult: 5 };
          RELATIVE_LABELS[Dygraph.TEN_SECONDLY]    = { label: 'sec', mult: 10 };
          RELATIVE_LABELS[Dygraph.THIRTY_SECONDLY] = { label: 'sec', mult: 30 };
          RELATIVE_LABELS[Dygraph.MINUTELY]        = { label: 'min', mult: 1 };
          RELATIVE_LABELS[Dygraph.TWO_MINUTELY]    = { label: 'min', mult: 2 };
          RELATIVE_LABELS[Dygraph.FIVE_MINUTELY]   = { label: 'min', mult: 5 };
          RELATIVE_LABELS[Dygraph.TEN_MINUTELY]    = { label: 'min', mult: 10 };
          RELATIVE_LABELS[Dygraph.THIRTY_MINUTELY] = { label: 'min', mult: 30 };
          RELATIVE_LABELS[Dygraph.HOURLY]          = { label: 'hr', mult: 1 };
          RELATIVE_LABELS[Dygraph.TWO_HOURLY]      = { label: 'hr', mult: 2 };
          RELATIVE_LABELS[Dygraph.SIX_HOURLY]      = { label: 'hr', mult: 6 };
          RELATIVE_LABELS[Dygraph.DAILY]           = { label: 'day', mult: 1 };
          RELATIVE_LABELS[Dygraph.WEEKLY]          = { label: 'week', mult: 1 };
          RELATIVE_LABELS[Dygraph.MONTHLY]         = { label: 'mon', mult: 1 };

          g = new Dygraph(
            document.getElementById("temp-profile-<%= temp_profile.id %>-timeline"),
            <%= temp_profile.steps_graph_data %>,
            {
              labels: ['', 'Temperature'],
              labelsDivWidth: 300,
              ylabel: 'Temperature',
              labelsDivStyles: { 'textAlign': 'right' },
              xRangePad: 10,
              axes: {
                x: {
                  ticker: function(min, max, pixels, opts, dygraph, vals) {
                    var chosen = Dygraph.pickDateTickGranularity(min*1000, max*1000, pixels, opts);
                    var f = (Dygraph.SHORT_SPACINGS[chosen] / 1000);

                    var tickers = Dygraph.numericTicks(min / f, max / f, pixels, opts, dygraph, vals);

                    var i;
                    for (i = 0; i < tickers.length; ++i) {
                      var r = RELATIVE_LABELS[chosen];
                      tickers[i].label = '+' + (tickers[i].v * r.mult) + r.label;
                      tickers[i].v = tickers[i].v * f;
                    }
                    return tickers;
                  }
                }
              }
            }
          );
        });
      </script>
    </div>
  </div>
</div>
