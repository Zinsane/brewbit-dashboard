<div class='row'>
  <div class='col-sm-8 col-sm-offset-1'>
    <h1>Temperature Profiles</h1>
  </div>
  <div class='col-sm-2'>
    <%= link_to 'New Temperature Profile', new_temp_profile_path, class: 'btn btn-primary btn-lg' %>
  </div>
</div>
<div class='row'>
  <ul>
    <% @temp_profiles.each do |setpoint| -%>
      <li>
        <%= link_to setpoint.name, edit_temp_profile_path(setpoint), class: 'btn btn-default' %> |
        <%= link_to 'Destroy', setpoint, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </li>
    <% end -%>
  </ul>
</div>

