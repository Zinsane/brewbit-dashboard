<%= form_for @device, html: { class: 'form-horizontal' } do |f| %>
  <% if @device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% @device.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

    <div>
      <%= f.fields_for :outputs do |o| %>
        <div>
          <%= o.select :function, Output::FUNCTIONS.values %>
          <%= o.text_field :compressor_delay %>
          <%= o.select :sensor_id, @device.sensors.collect {|s| [s.sensor_index, s.id]}, include_blank: true %>
        </div>
      <% end -%>
    </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
