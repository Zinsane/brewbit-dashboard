<div class="sensor col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Sensor <%= sensor_settings.sensor.sensor_index + 1 %></h3>
    </div>
    <div class="panel-body">
      <div id="sensor-<%= sensor_settings.id %>-timeline" class="sensor-plot bottom-space"></div>
      <script type='text/javascript'>
        $(document).ready(function () {
          g = new Dygraph(
            document.getElementById("sensor-<%= sensor_settings.id %>-timeline"),
            [
              <% sensor_settings.readings.each do |reading| %>
                [new Date(<%= reading.created_at.to_i %>), <%= reading.value %>],
              <% end %>
            ],
            {
              rollPeriod: 10,
              labels: ['', 'Temperature'],
              labelsDivWidth: 300,
              ylabel: 'Temperature',
              showRangeSelector: true,
              legend: 'always',
              labelsDivStyles: { 'textAlign': 'right' },
            }
          );
        });
      </script>

      <div class="row">
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Current command</h4>
            </div>
            <div class="panel-body">
              <h4>
                <span class="label label-default label-lg">
                  <% if sensor_settings.setpoint_type == Sensor::SETPOINT_TYPE[:static] %>
                    Static Setpoint - <%= sensor_settings.static_setpoint %>&deg; <%= spree_current_user.temperature_scale %>
                  <% else %>
                    Temperature Profile - <%= sensor_settings.temp_profile.name %>
                  <% end %>
                </span>
              </h4>
            </div>
          </div>
        </div>

        <div class="col-md-6 col">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Currently controlling</h4>
            </div>
            <div class="panel-body">
              <h4>
                <% unless sensor_settings.sensor.controlled_outputs.blank? %>
                  <% sensor_settings.sensor.controlled_outputs.each do |output| %>
                    <span class="label label-default label-lg"><%= OutputSettings::INDEX_NAME[output.output_index].capitalize %> Output - <%= OutputSettings::FUNCTION_NAME[output.current_settings.function].capitalize %></span>
                  <% end %>
                <% else %>
                  <span class="label label-default label-lg">Nothing</span>
                <% end %>
              </h4>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
