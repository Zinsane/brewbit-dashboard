<%= form_for @device_command, html: { class: 'form-horizontal' } do |f| %>
  <% if f.object.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(f.object.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :device_id %>
  
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.fields_for :sensor_settings do |s| %>
      <div class='col-sm-6'>
        <%= render partial: 'sensor', locals: { s: s } %>
      </div>
    <% end -%>
  </div>

  <div class='form-group'>
    <%= f.fields_for :output_settings do |o| %>
      <div class='col-sm-6'>
        <%= render partial: 'output', locals: { o: o } %>
      </div>
    <% end -%>
  </div>

  <div class="form-group">
    <div class="col-sm-4 pull-right">
      <div class='pull-right'>
        <%= f.submit "Send Command", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
