<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Edit Dynamic Setpoint</h3>
    </div>
    <div class="panel-body">
      <%= nested_form_for @dynamic_setpoint, html: { class: 'form-horizontal' } do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <table id="steps" class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Temperature</th>
              <th>Duration</th>
              <th>Type</th>
              <th><%= f.link_to_add raw('<span class="glyphicon glyphicon-plus"></span>'), :steps, :data => { :target => "#steps" }, class: 'btn btn-default btn-sm' %></th>
            </tr>
          </thead>
          <tbody>
          <%= f.fields_for :steps, :wrapper => false do |ff| %>
            <tr>
              <td>1</td>
              <td><%= ff.number_field :value %></td>
              <td><%= ff.number_field :duration %></td>
              <td>
                <%= ff.hidden_field :step_type %>
                <div class="btn-group" data-toggle="buttons">
                  <label class="btn btn-default">
                    <input type="radio" name="step_types" id="ramp"> Ramp
                  </label>
                  <label class="btn btn-default">
                    <input type="radio" name="step_types" id="hold"> Hold
                  </label>
                </div>
              </td>
              <td>
                <%= ff.link_to_remove raw('<span class="glyphicon glyphicon-chevron-up"></span>'), class: 'btn btn-default btn-sm' %>
                <%= ff.link_to_remove raw('<span class="glyphicon glyphicon-chevron-down"></span>'), class: 'btn btn-default btn-sm' %>
                <%= ff.link_to_remove raw('<span class="glyphicon glyphicon-remove"></span>'), class: 'btn btn-default btn-sm' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      
        <div class="form-group">
          <div class="col-md-offset-8 col-md-4">
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
